{{#if addForm}}
<div>
<form>
    <div class="form-group">
    <label for="question">Your Question</label>
    {{input value=question id="question"}}
    </div>

    <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author"}}
    </div>
    <button {{action 'saveQuestion'}}>Submit</button>
</form>
</div>
    {{else}}
    <button {{action 'newQuestion'}}>Add Question</button>
    {{/if}}

