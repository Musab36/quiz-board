{{#if updateQuizForm}}
  <h4>Update: {{board.question}} - by {{board.author}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name</label><br>
        {{input value=author id="author" placeholder=board.author}}
      </div>

      <div class="form-group">
        <label for="question">Question</label><br>
        {{input value=question id="question" placeholder=board.question}}
      </div>
      <button {{action 'update' board}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuizForm'}}>Edit Question</button>
{{/if}}